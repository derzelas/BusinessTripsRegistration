@using System.Web.Mvc.Html
@model BusinessTrips.DAL.Model.BusinessTripModel

<body>
    @using (Html.BeginForm("AddBusinessTrip", "BusinessTrip", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
    {
        <div class="container-fluid">
            <h2>Register new business trip.</h2>
            <form class="form-inline">
                <fieldset>
                    <div class="form-group">
                        <div class="col-xs-4">
                            @Html.LabelFor(m => m.Department)
                            @Html.EnumDropDownListFor(m => m.Department, new { @class = "form-control" })
                        </div>

                        <div class="col-xs-5">
                            @Html.LabelFor(m => m.PmName)
                            @Html.TextBoxFor(m => m.PmName, new { @class = "form-control", PlaceHolder = "PM Name" })
                        </div>
                    </div>
                </fieldset>
                <br>
                <fieldset>
                    <div class="form-group">
                        <div class="col-xs-5">
                            @Html.LabelFor(m => m.ProjectName)
                            @Html.TextBoxFor(m => m.ProjectName, new { @class = "form-control", PlaceHolder = "Project Name" })
                        </div>
                        <div class="col-xs-3">
                            @Html.LabelFor(m => m.ProjectNumber)
                            @Html.TextBoxFor(m => m.ProjectNumber, new { @class = "form-control", PlaceHolder = "Project Number" })
                        </div>
                    </div>
                </fieldset>
                <br>
                <fieldset>
                    <div class="form-group">
                        <div class="col-xs-5">
                            @Html.LabelFor(m => m.TaskName)
                            @Html.TextBoxFor(m => m.TaskName, new { @class = "form-control", PlaceHolder = "Task Name" })
                        </div>
                        <div class="col-xs-3">
                            @Html.LabelFor(m => m.TaskNumber)
                            @Html.TextBoxFor(m => m.TaskNumber, new { @class = "form-control", PlaceHolder = "Task Number" })
                        </div>
                    </div>
                </fieldset>
                <br>
                <fieldset>
                    <div class="form-group">
                        <div class="col-xs-2">
                            @Html.LabelFor(m => m.LeavingFrom)
                            @Html.EnumDropDownListFor(m => m.LeavingFrom, new { @class = "form-control" })
                        </div>
                        <div class="col-xs-4">
                            @Html.LabelFor(m => m.StartingDate)
                            @*@Html.TextBoxFor(m => m.StartingDate, new { @class = "form-control", PlaceHolder = "dd/mm/yy" })*@
                            @Html.EditorFor(m=>m.StartingDate, new { @class = "form-control" })
                        </div>
                        <div class="col-xs-4">
                            @Html.LabelFor(m => m.EndingDate)
                            @*@Html.TextBoxFor(m => m.EndingDate, new { @class = "form-control", PlaceHolder = "dd/mm/yy" })*@
                            @Html.EditorFor(m => m.EndingDate, new { @class = "form-control" })
                        </div>
                    </div>
                </fieldset>
                <br>

                <fieldset>
                    <div class="form-group">
                        <div class="col-xs-3">
                            @Html.LabelFor(m => m.ClientName)
                            @Html.TextBoxFor(m => m.ClientName, new { @class = "form-control", PlaceHolder = "Client Name" })
                        </div>
                        <div class="col-xs-3">
                            @Html.LabelFor(m => m.ClientLocation)
                            @Html.TextBoxFor(m => m.ClientLocation, new { @class = "form-control", PlaceHolder = "Client Location" })
                        </div>
                        <div class="col-xs-3">
                            @Html.LabelFor(m => m.MeansOfTransportation)
                            @Html.TextBoxFor(m => m.MeansOfTransportation, new { @class = "form-control" })
                        </div>
                        <br>
                        @*<div class="checkbox">
                                @Html.CheckBoxFor(m => m.WithPersonalCar, new { @class = "form-control" })
                                @Html.LabelFor(m => m.WithPersonalCar)
                            </div>*@
                    </div>
                </fieldset>
                <br>
                <fieldset>
                    <div class="form-group">
                        <div class="col-xs-3">
                            @Html.LabelFor(m => m.Accomodation)
                            @Html.TextBoxFor(m => m.Accomodation, new { @class = "form-control", PlaceHolder = "Accomodation" })
                        </div>
                        <br>
                    </div>
                    <div class="form-group">
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.PhoneIsNeeded, new { @class = "form-control" })
                            @Html.LabelFor(m => m.PhoneIsNeeded)
                        </div>
                        <br>
                        <br>
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.BankCardIsNeeded, new {@class = "form-control"})
                            @Html.LabelFor(m => m.BankCardIsNeeded)
                        </div>
                        <br>
                        <br>
                        <div class="checkbox">
                            @Html.CheckBoxFor(m => m.WithPersonalCar, new { @class = "form-control" })
                            @Html.LabelFor(m => m.WithPersonalCar)
                        </div>
                    </div>
                </fieldset>
                <br>
                <fieldset>
                    <div class="form-group">

                        @Html.LabelFor(m => m.OtherInfo)
                        <div class="col-xs-80">
                            @Html.TextAreaFor(m => m.OtherInfo, new { @class = "form-control", rows = "8", cols = "120", PlaceHolder = "anything else you wish to mention" })
                        </div>
                    </div>
                </fieldset>

                <button type="submit" class="btn btn-default">Submit</button>
            </form>
        </div>
    }
</body>

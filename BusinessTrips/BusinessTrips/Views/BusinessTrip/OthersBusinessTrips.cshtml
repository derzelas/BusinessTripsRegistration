@model BusinessTrips.DAL.Model.OtherBusinessTripsCollectionViewModel
@{
    ViewBag.Title = "OthersBusinessTrips";
}

<h2>OthersBusinessTrips</h2>

@using (Html.BeginForm("SearchBusinessTrips", "BusinessTrip", new { ReturnUrl = ViewBag.ReturnUrl }, FormMethod.Post, new { @class = "form-horizontal", role = "form" }))
{
    <style>
        table, th, td {
            padding: 5px;
        }

        table {
            border-spacing: 15px;
        }
    </style>
    <table>
        <tr>
            <td>
                @Html.LabelFor(m => m.BusinessTripFilter.EmployeeName)
            </td>
            <td>
                @Html.TextBoxFor(m => m.BusinessTripFilter.EmployeeName)
            </td>
        <tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.BusinessTripFilter.ClientName)
            </td>
            <td>
                @Html.TextBoxFor(m => m.BusinessTripFilter.ClientName)
            </td>
        <tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.BusinessTripFilter.Accommodation)
            </td>
            <td>
                @Html.TextBoxFor(m => m.BusinessTripFilter.Accommodation)
            </td>
        <tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.BusinessTripFilter.StartingDate)
            </td>
            <td>
                @Html.EditorFor(m => m.BusinessTripFilter.StartingDate, new { @class = "form-control" })
            </td>
        <tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.BusinessTripFilter.EndingDate)
            </td>
            <td>
                @Html.EditorFor(m => m.BusinessTripFilter.EndingDate, new { @class = "form-control" })
            </td>
        <tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.BusinessTripFilter.Location)
            </td>
            <td>
                @Html.TextBoxFor(m => m.BusinessTripFilter.Location)
            </td>
        <tr>
        <tr>
            <td>
                @Html.LabelFor(m => m.BusinessTripFilter.MeanOfTransportation)
            </td>
            <td>
                @Html.TextBoxFor(m => m.BusinessTripFilter.MeanOfTransportation)
            </td>
        <tr>
        <tr>
            <td colspan="2" align="center">
                <div class="form-group">
                    <div class="col-md-offset-2 col-md-10">
                        <input type="submit" value="Search" class="btn btn-default" />
                    </div>
                </div>
            </td>
        </tr>
    </table>

}

<table class="table">
    <tr>
        <th>
            @Html.DisplayName("Name")
        </th>
        <th>
            @Html.DisplayName("Accomodation")
        </th>
        <th>
            @Html.DisplayName("Location")
        </th>
        <th>
            @Html.DisplayName("Means of Transportaion")
        </th>
        <th>
            @Html.DisplayName("Starting Date")
        </th>
    </tr>

    @foreach (var item in Model.SearchBusinessTripModels)
    {
        <tr>
            <td>
                @Html.DisplayFor(modelItem => item.Name)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Accomodation)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.Location)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.MeansOfTransportaion)
            </td>
            <td>
                @Html.DisplayFor(modelItem => item.StartingDate)
            </td>
            <td>
                @*@Html.ActionLink("Edit", "Edit", new { id=item.Id }) |
                    @Html.ActionLink("Details", "Details", new { id=item.Id }) |
                    @Html.ActionLink("Delete", "Delete", new { id=item.Id })*@
            </td>
        </tr>
    }

</table>
